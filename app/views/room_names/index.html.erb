<p id="notice"><%= notice %></p>

<h1>Room Names</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_names.each do |room_name| %>
      <tr>
        <td><%= room_name.name %></td>
        <td><%= link_to 'Show', room_name %></td>
        <td><%= link_to 'Edit', edit_room_name_path(room_name) %></td>
        <td><%= link_to 'Destroy', room_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

