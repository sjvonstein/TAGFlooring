<p id="notice"><%= notice %></p>

<h1>Communities</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.name %></td>
        <td><%= community.code %></td>
        <td><%= link_to 'Show', community, class:"btn btn-sm btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_community_path(community), class:"btn btn-sm btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', community, class:"btn btn-sm btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Community', new_community_path, class:"btn btn-secondary" %>
