<p id="notice"><%= notice %></p>

<h1><%= @floorplan.name %></h1>

<p>
  <strong>Code: </strong><%= @floorplan.code %> | <strong>Community: </strong><%= @floorplan.community.name %> | <strong># of Floors: </strong><%= @floorplan.floors %> | <%= link_to 'Edit', edit_floorplan_path(@floorplan), class:'btn btn-secondary btn-sm' %> | <%= link_to 'Delete', @floorplan, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
</p>
<h2>Rooms:</h2>
  <ul class='list-group list-group-horizontal-md'>
    <% @floorplan.floorplanlayouts.each do |t| %>
      <li class='list-group-item flex-fill'>
        <%= t.room_name.name %>
      </li>
    <% end %>
  </ul>

<p>
  <% if @floorplan.floorplan_images.attached? %>
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">

    <% @floorplan.floorplan_images.each_with_index do |t, i| %>
    <% if @floorplan.floorplan_images.first == t %>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" class="active" aria-current="true" aria-label="Slide <%= i+1 %>"></button>

    <% else %>

    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" aria-label="Slide <%= i+1 %>"></button>

    <% end %>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% @floorplan.floorplan_images.each do |x| %>
    <% if @floorplan.floorplan_images.first == x %>
    <div class="carousel-item active">
      <img src="<%=(url_for(x)) %>" class="d-block w-100" alt="...">
    </div>
    <% end %>
    <% end %>

    <% @floorplan.floorplan_images.each do |i| %>
    <% if @floorplan.floorplan_images.first != i %>

    <div class="carousel-item">
      <img src="<%=(url_for(i)) %>" class="d-block w-100" alt="...">
    </div>
    <% end %>
    <% end %>

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
  </div>
  <% end %>






<%= link_to 'Back', floorplans_path %>


